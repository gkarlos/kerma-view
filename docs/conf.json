{
  "plugins"   : ["plugins/markdown"],
  "templates" : {
    "monospaceLinks" : true,
    "cleverlinks": true,
    "showInheritedInNav": true,
    "useLongnameInNav" : true,
    "logo": {
      "type": "text",
      "src":  "KermaView Source"
    },
    "footer": "Part of the Kerma project"
  },
  "source" : {
    "include" : ["./src/"]
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/dev",
    "title": "KermaView",
    "template": "node_modules/@kdominic/dkdoc"
  }
}

