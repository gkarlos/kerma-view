{
  "name": "kerma-view",
  "description": "A desktop client for Kerma",
  "version": "1.0.0",
  "author": "George Karlos",
  "license": "Apache-2.0",
  "homepage": "https://gkarlos.github.io/kerma",
  "bugs": "https://github.com/gkarlos/kerma-view/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/gkarlos/kerma-view"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "main": "./src/main/main.js",
  "type": "module",
