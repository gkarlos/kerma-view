{
  "name": "kerma-view",
  "description": "A desktop client for Kerma",
  "version": "1.0.0",
  "author": "George Karlos",
  "license": "Apache-2.0",
  "homepage": "https://gkarlos.github.io/kerma",
  "bugs": "https://github.com/gkarlos/kerma-view/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/gkarlos/kerma-view"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "main": "./src/main/main.js",
  "scripts": {
    "start": "electron .",
    "docs": "npm run docs:build && npm run docs:read",
    "docs:build": "run-script-os",
    "docs:build:linux": "KERMA_VIEW_ROOT=$(pwd) ./scripts/build-the-docs.sh",
    "docs:build:windows": "powershell -ExecutionPolicy Bypass ./node_modules/.bin/jsdoc -c ./docs/conf.json -d ./docs/dev -R ./docs/README.md",
    "docs:read": "run-script-os",
    "docs:read:linux": "KERMA_VIEW_ROOT=$(pwd) ./scripts/read-the-docs.sh",
    "docs:read:windowns": "powershell Invoke-Item docs/dev/index.html",
    "clean": "run-script-os",
    "clean:linux": "./scripts/clean.sh",
    "deps": "node scripts/build-external-deps.js"
  },
  "dependencies": {
    "ace-builds": "^1.4.11",
    "bootstrap": "^4.4.1",
    "cli-color": "^2.0.0",
    "commander": "^5.0.0",
    "jquery": "^3.5.0",
    "monaco-editor": "^0.20.0",
    "monaco-loader": "^1.0.0",
    "npm-scripts-tree": "^1.4.1",
    "run-script-os": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^8.2.1",
    "jsdoc": "^3.6.4",
    "cpb-jsdoc-template": "^1.2.2",
    "minami": "^1.2.3"
  }
}
