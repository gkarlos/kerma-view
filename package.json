{
  "name": "kerma-view",
  "description": "A desktop client for Kerma",
  "version": "1.0.0",
  "author": "George Karlos",
  "license": "Apache-2.0",
  "homepage": "https://github.com/kerma-project",
  "bugs": "https://github.com/gkarlos/kerma-view/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/gkarlos/kerma-view"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "main": "./src/main/main",
  "scripts": {
    "start": "electron .",
    "docs": "npm run docs:build && npm run docs:read",
    "docs:build": "run-script-os",
    "docs:build:linux": "chmod +x scripts/build-the-docs.sh && KERMA_VIEW_ROOT=$(pwd) ./scripts/build-the-docs.sh",
    "docs:build:windows": "powershell -ExecutionPolicy Bypass ./node_modules/.bin/jsdoc -c ./docs/conf.json -d ./docs/dev -R ./docs/README.md",
    "docs:read": "run-script-os",
    "docs:read:linux": "chmod +x scripts/read-the-docs.sh && KERMA_VIEW_ROOT=$(pwd) ./scripts/read-the-docs.sh",
    "docs:read:windows": "powershell Invoke-Item docs/dev/index.html",
    "stats": "chmod +x scripts/codestats.sh && KERMA_VIEW_ROOT=$(pwd) scripts/codestats.sh",
    "clean": "run-script-os",
    "clean:linux": "rm -rf docs/dev && rm -rf node_modules",
    "clean:windows": "rm node_modules",
    "test": "npm run test:unit",
    "test:list": "mocha -R list -w test/unit/**/*.test.js",
    "test:single": "mocha",
    "test:unit": "mocha --recursive test/unit/**/*.test.js",
    "test-report": "npm run test-report:run && test-report:open",
    "test-report:run": "mocha --reporter mochawesome --reporter-options reportDir=test/report,reportFilename=index.html --recursive test/unit/**/*.test.js",
    "test-report:open": "run-script-os",
    "test-report:open:linux": "xdg-open test/report/index.html",
    "test-report:open:windows": "powershell Invoke-Item test/report/index.html",
    "deps": "node scripts/build-external-deps.js",
    "postinstall": "cd examples && ./gen_compile_db.sh"
  },
  "_moduleAliases": {
    "@root": ".",
    "@lib": "lib",
    "@assets": "assets",
    "@src": "src",
    "@test": "test",
    "@renderer": "src/renderer",
    "@main": "src/main",
    "@common": "src/common",
    "@mock": "src/mock"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@types/simple-icons": "^2.5.0",
    "animate.css": "^4.1.0",
    "app-module-path": "^2.2.0",
    "beezy-jsdocstrap": "^1.0.0",
    "bootstrap": "^4.4.1",
    "bootstrap-input-spinner": "^1.13.9",
    "bootstrap-notify": "^3.1.3",
    "bootstrap4-toggle": "^3.6.1",
    "bootswatch": "^4.5.0",
    "calendar-heatmap-mini": "^1.3.0",
    "cli-color": "^2.0.0",
    "commander": "^5.0.0",
    "core-decorators": "^0.20.0",
    "csv2md": "^1.0.1",
    "d3": "^5.16.0",
    "d3-tip": "^0.9.1",
    "dotenv": "^8.2.0",
    "electron-about-window": "^1.13.2",
    "electron-context-menu": "^1.0.0",
    "electron-editor-context-menu": "^1.1.1",
    "electron-progressbar": "^1.2.0",
    "ispin": "^2.0.1",
    "jayson": "^3.3.4",
    "jquery": "^3.5.0",
    "jsdoc-inheritance-diagram": "^2.0.1",
    "json-rpc2": "^2.0.0",
    "mocha": "^7.1.2",
    "mocha-list-tests": "^1.0.2",
    "mochawesome": "^6.1.1",
    "module-alias": "^2.2.2",
    "monaco-editor": "^0.20.0",
    "npm-scripts-tree": "^1.4.1",
    "pace-js": "^1.0.2",
    "popper.js": "^1.16.0",
    "randomcolor": "^0.5.4",
    "resize-observer": "^1.0.0",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.1",
    "selectize": "^0.12.6",
    "simple-icons": "^3.2.0",
    "simplebar": "^5.2.1",
    "sloc": "^0.2.1",
    "split.js": "^1.5.11",
    "tui-jsdoc-template": "^1.2.2",
    "v8-compile-cache": "^2.1.0",
    "vizjs": "^2.1.1",
    "vscode-jsonrpc": "^5.0.1",
    "xterm": "^4.5.0",
    "xterm-addon-fit": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "better-docs": "^2.0.1",
    "chai": "^4.2.0",
    "electron": "^8.2.1",
    "jsdoc": "^3.6.4",
    "jsdoc-mermaid": "^1.0.0"
  }
}
